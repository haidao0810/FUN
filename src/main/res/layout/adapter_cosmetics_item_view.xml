<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <TextView
        android:id="@+id/first_letter_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        android:gravity="center_vertical"
        android:background="@color/color_E2E2E2"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/cosmetics_logo_iv"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:layout_below="@id/first_letter_tv"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/cosmetics_name_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:textColor="@color/black_666"
        android:textSize="@dimen/sp_16"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_12"
        android:layout_alignTop="@id/cosmetics_logo_iv"
        android:layout_toRightOf="@id/cosmetics_logo_iv"
        />

</RelativeLayout>